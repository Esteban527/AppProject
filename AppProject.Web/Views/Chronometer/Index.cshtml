@model AppProject.Web.Data.Entities.Chronometer
@{
    ViewData["Title"] = "Cronómetro Online";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h2>@Model.ElapsedTime.ToString(@"hh\:mm\:ss")</h2>
</div>

<form asp-action="Start" method="post">
    <button type="submit" class="btn btn-primary" @(Model.IsRunning ? "disabled" : "")>Start</button>
</form>

<form asp-action="Pause" method="post">
    <button type="submit" class="btn btn-primary" @(Model.IsRunning ? "" : "disabled")>Pause</button>
</form>

<form asp-action="Reset" method="post">
    <button type="submit" class="btn btn-primary">Reset</button>
</form>

<form asp-action="Lap" method="post">
    <button type="submit" class="btn btn-primary" @(Model.IsRunning ? "" : "disabled")>Lap</button>
</form>

<h3>Lap Times</h3>
<ul>
    @foreach (var lap in Model.LapTimes)
    {
        <li>@lap.ToString(@"hh\:mm\:ss")</li>
    }
</ul>
